{
  "$schema": "http://json-schema.org/schema",
  "id": "NxJestProject",
  "cli": "nx",
  "title": "Add Jest Configuration to a project",
  "type": "object",
  "properties": {
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }
    },
    "skipSetupFile": {
      "type": "boolean",
      "description": "[Deprecated]: Skips the setup file required for angular. (Use --setup-file)",
      "default": false,
      "x-deprecated": true
    },
    "setupFile": {
      "type": "string",
      "enum": ["none", "angular", "web-components"],
      "description": "The setup file to be generated",
      "default": "none"
    },
    "skipSerializers": {
      "type": "boolean",
      "description": "Skips the serializers required to snapshot angular templates",
      "default": false
    },
    "supportTsx": {
      "type": "boolean",
      "description": "Setup tsx support",
      "default": false
    },
    "testEnvironment": {
      "type": "string",
      "enum": ["jsdom", "node"],
      "description": "The test environment for jest",
      "default": "jsdom"
    },
    "babelJest": {
      "type": "boolean",
      "alias": "babel-jest",
      "description": "Use babel-jest instead of ts-jest",
      "default": false
    },
    "skipFormat": {
      "description": "Skip formatting files",
      "type": "boolean",
      "default": false
    }
  },
  "required": []
}
